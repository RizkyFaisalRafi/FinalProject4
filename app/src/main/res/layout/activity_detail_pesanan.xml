            android:layout_height="900dp"
            android:background="@color/bg">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imgBus"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bus"
                app:riv_corner_radius="6dp" />

            <TextView
                android:id="@+id/nameBusDetail"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="27dp"
                android:layout_marginTop="253dp"
                android:layout_marginEnd="192dp"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/name_bus"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/cardstar"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="257dp"
                android:layout_marginEnd="27dp"
                android:src="@drawable/cardstar" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/cardstar"
                android:layout_alignParentTop="true"
                android:layout_marginTop="261dp"
                android:layout_marginEnd="70dp"
                android:src="@drawable/star" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/cardstar"
                android:layout_alignParentTop="true"
                android:layout_marginTop="261dp"
                android:layout_marginEnd="50dp"
                android:src="@drawable/star_half" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/cardstar"
                android:layout_alignParentTop="true"
                android:layout_marginTop="263dp"
                android:layout_marginEnd="9dp"
                android:text="8.7/5"
                android:textColor="@color/small_text" />

            <!-- Detail perjalanan-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="306dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_card">

                <TextView
                    android:id="@+id/from_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="95dp"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Probolinggo"
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/pickUp_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginBottom="70dp"
                    android:fontFamily="@font/nunito_regular"
                    android:text="Terminal Probolinggo"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/time_start_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
