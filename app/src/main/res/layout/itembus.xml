<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card"

        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/namebus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name_bus"
                android:textSize="20sp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_bold"/>
<!--            <TextView-->
<!--                android:id="@+id/date1"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/_10_11_2022"-->
<!--                android:textColor="@color/small_text"-->
<!--                android:textSize="13sp"-->
<!--                android:fontFamily="@font/nunito_regular"-->
<!--                android:layout_marginTop="15dp"-->
<!--                android:layout_marginStart="130dp"/>-->
        </LinearLayout>
        <TextView
            android:id="@+id/typeBus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ekonomi"
            android:textColor="@color/small_text"
            android:layout_marginStart="15dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="11dp"
                android:src="@drawable/from"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick Up"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="@color/small_text"
                    android:layout_marginTop="11dp"/>
                <TextView
                    android:id="@+id/dari"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/small_text"
                    android:fontFamily="@font/nunito_regular"
                    android:text="@string/probolinggo"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
               <TextView
                   android:id="@+id/time"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="2 Hours"
                   android:fontFamily="@font/nunito_regular"
                   android:textColor="@color/small_text"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBookNow"
                    android:layout_width="90dp"
                    android:layout_height="34dp"
                    android:text="@string/book_now"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/blue"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="11dp"
                android:src="@drawable/to"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drop Off"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="@color/small_text"
                    android:layout_marginTop="11dp"/>
                <TextView
                    android:id="@+id/tiba"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/small_text"
                    android:text="@string/probolinggo"
                    android:fontFamily="@font/nunito_regular"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:layout_marginStart="100dp"
                    android:textColor="@color/small_text"
                    android:fontFamily="@font/nunito_regular"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:text="@string/rp_50_000"
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="15dp"
                    android:textColor="#364767"/>

    </LinearLayout>

</LinearLayout>
</LinearLayout>
</LinearLayout>